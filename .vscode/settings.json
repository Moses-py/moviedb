{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": false, // required
  "editor.formatOnType": false, // required
  "editor.formatOnSave": true, // optional
  "editor.formatOnSaveMode": "file", // required to format on save
  "files.autoSave": "onFocusChange",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#d7b54e",
    "activityBar.background": "#d7b54e",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#1d8269",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#d7b54e",
    "statusBar.background": "#c59f2d",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#9b7d24",
    "statusBarItem.remoteBackground": "#c59f2d",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#c59f2d",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#c59f2d99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#c59f2d" // optional but recommended
}
